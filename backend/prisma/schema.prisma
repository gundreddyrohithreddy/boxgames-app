// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // âœ… classic Prisma 6 pattern
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  PLAYER
  OWNER
  ADMIN
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  phone        String?
  passwordHash String
  role         Role
  venues       Venue[]  @relation("ProviderVenues")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Venue {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  city        String?
  address     String?
  provider    User     @relation("ProviderVenues", fields: [providerId], references: [id])
  providerId  Int
  courts      Court[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  reviews        Review[]
  ratingAverage  Float?   @default(0)
  ratingCount    Int      @default(0)
}

model Court {
  id          Int      @id @default(autoincrement())
  name        String
  sportType   String
  pricePerHour Int
  venue       Venue    @relation(fields: [venueId], references: [id])
  venueId     Int
  slots       Slot[]
}


model TimeSlot {
  id        Int        @id @default(autoincrement())
  courtId   Int
  date      DateTime
  startTime DateTime
  endTime   DateTime
  status    SlotStatus @default(AVAILABLE)

  court   Court    @relation(fields: [courtId], references: [id])
  booking Booking?
}

model Slot {
  id        Int      @id @default(autoincrement())
  date      DateTime
  startTime DateTime
  endTime   DateTime
  status    SlotStatus @default(AVAILABLE)
  court     Court   @relation(fields: [courtId], references: [id])
  courtId   Int
  booking   Booking?
}

enum SlotStatus {
  AVAILABLE
  BOOKED
  BLOCKED
}


model Booking {
  id           Int      @id @default(autoincrement())
  player       User     @relation(fields: [playerId], references: [id])
  playerId     Int
  slot         Slot     @relation(fields: [slotId], references: [id])
  slotId       Int
  status       BookingStatus @default(PENDING)
  totalAmount  Int
  paymentStatus PaymentStatus @default(PENDING)
  createdAt    DateTime @default(now())
  paymentOrderId String?
  paymentId      String?

}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}


model Payment {
  id                   Int           @id @default(autoincrement())
  bookingId            Int           @unique
  method               String
  providerTransactionId String?
  amount               Int
  status               PaymentStatus @default(PENDING)
  createdAt            DateTime      @default(now())

  booking Booking @relation(fields: [bookingId], references: [id])
}

model Review {
  id        Int      @id @default(autoincrement())
  rating    Int
  comment   String?
  createdAt DateTime @default(now())

  player    User  @relation(fields: [playerId], references: [id])
  playerId  Int

  venue     Venue @relation(fields: [venueId], references: [id])
  venueId   Int
}
